<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.lhp.yy2.view.NoScrollViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/rg_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_tab_bg"
        android:gravity="center"
		android:paddingTop="4dp"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_checkbody"
            style="@style/Bottom_Tab_Style"
            android:checked="true"
            android:drawableTop="@drawable/rb_checkbody_btn_selector"
            android:text="体检" />

        <RadioButton
            android:id="@+id/rb_news"
            style="@style/Bottom_Tab_Style"
            android:drawableTop="@drawable/rb_news_btn_selector"
            android:text="资讯" />

        <RadioButton
            android:id="@+id/rb_me"
            style="@style/Bottom_Tab_Style"
            android:drawableTop="@drawable/rb_me_btn_selector"
            android:text="我" />

        <RadioButton
            android:id="@+id/rb_setting"
            style="@style/Bottom_Tab_Style"
            android:drawableTop="@drawable/rb_setting_btn_selector"
            android:text="设置" />
    </RadioGroup>

</LinearLayout>